<Window x:Class="Zad3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Zad3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ListBox x:Name="listBox" ItemsSource="{Binding}" DisplayMemberPath="Title" HorizontalAlignment="Left" VerticalAlignment="Top" Width="300" Height="300" Margin="10"/>
        <Button x:Name="AddButton" Content="Dodaj" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="330,10,0,0" Click="AddButton_Click"/>
        <Button x:Name="EditButton" Content="Edytuj" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="330,40,0,0" Click="EditButton_Click"/>
        <Button x:Name="DeleteButton" Content="Usuń" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="330,70,0,0" Click="DeleteButton_Click"/>
        <Button x:Name="ImportButton" Content="Importuj" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="330,100,0,0" Click="ImportButton_Click"/>
        <Button x:Name="ExportButton" Content="Eksportuj" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="330,130,0,0" Click="ExportButton_Click"/>
    </Grid>
</Window>
